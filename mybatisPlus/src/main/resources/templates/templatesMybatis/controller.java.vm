    @PutMapping({"update"})
    @ApiOperationSupport(order = 4)
    @ApiOperation(value = "更新实体")
    public R update(@RequestBody $!{table.entityName} entity) {
        #foreach($entity in ${table.fields})
        #if(${entity.keyFlag})##生成主键排在第一位
