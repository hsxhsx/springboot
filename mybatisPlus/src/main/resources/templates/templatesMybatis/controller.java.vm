    @ApiOperation(value = "根据实体id获取详情")
    public R<User> getOne($!{table.entityName} entity) {
        QueryWrapper queryWrapper = new QueryWrapper<>(entity);
        return R.ok(service.getOne(queryWrapper));
    }

